/* joke.wxss */

.wx-navbar {
  box-sizing:border-box;
  position: fixed;
  top: 0px;
  left:0px;
  width: 100%;
  border-bottom: 1px solid #D5D5D5;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  height: 90rpx;
  z-index: 1000;
}

.wx-navbar-item {
  flex: 1;
  font-size: 30rpx;
  text-align: center;
  line-height: 90rpx;
}

.wx-current-item {
  color:#d81e06;
}

.wx-scroll-view {
  width: 100%;
  margin: 90rpx 0 0 0;
}

.wx-joke-container {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #e7e7e7;
  box-shadow: 0 0 5rpx 0 #ccc;
  padding: 20rpx 30rpx;
}

.wx-joke-container .wx-joke-profile {
  width: 60rpx;
  height: 60rpx;
  background-color: palevioletred;
  border-radius: 50%;
}

.wx-joke-container .wx-joke-author {
  margin-left: 10rpx;
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 60rpx;
}

.wx-joke-container .wx-joke-time {
  font-size: 28rpx;
  color: #999;
  line-height: 60rpx;
}

.wx-joke-container .wx-joke-text {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0;
}

.wx-joke-container .wx-joke-love {
  font-size: 28rpx;
  color: #999;
  padding: 0 20rpx;
  flex: 1;
  text-align: right;
  line-height: 60rpx;
}

.wx-joke-container .wx-joke-hate {
  font-size: 28rpx;
  color: #999;
  line-height: 60rpx;
}

.wx-joke-container .wx-joke-image {
  margin: 20rpx 0;
  flex: 1;
}

.wx-joke-container .wx-joke-video {
  margin: 20rpx 0;
  flex: 1;
  height: 400rpx;
}

.wx-joke-container .wx-joke-voice {
  width: 60rpx;
  height: 60rpx;
}

.wx-voice-playing {
  font-size: 28rpx;
  color: #00c06d;
  line-height: 60rpx;
}